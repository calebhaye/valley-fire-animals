<div class="page-header">
  <h1>Report <%= @report.id %></h1>
  <% if @report.reunited %>
    <h2>This animal has been returned home :)</h2>
  <% end %>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-2 field-label">
    Summary
  </div>
  <div class="col-sm-8">
    <strong>
      <%= @report.report_type.titleize %> <%= @report.animal_type_name %>:
    </strong>
    <%= @report.summary %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2 field-label">
    Reported
  </div>
  <div class="col-sm-8">
    <%= @report.created_at.strftime("%A, %B %-d, %Y at %l:%M %P") %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2 field-label">
    Description
  </div>
  <div class="col-sm-8">
    <%= @report.description %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2 field-label">
    Reporter name
  </div>
  <div class="col-sm-8">
    <%= @report.reporter_name %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2 field-label">
    Reporter contact info
  </div>
  <div class="col-sm-8">
    <%= @report.reporter_contact_info %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2 field-label">
    Photo
  </div>
  <div class="col-sm-8">
    <% if @report.photo.present? %>
      <%= image_tag(@report.photo.url(:medium)) %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2 field-label">
    Reunited
  </div>
  <div class="col-sm-8">
    <%= @report.reunited ? "Yes" : "No" %>
    <% unless @report.reunited %>
      <p>
        Have you reunited this animal with its owner?  Let us know!
        <br>
        <%= link_to 'Reunited', reunite_path,
          class: 'btn btn-success', role: "button" %>
      </p>
    <% end %>
  </div>
</div>

<br>
<%= link_to 'View all reports', reports_path %>
